@model IEnumerable<Pattern_of_life.Models.FlagState>
<a href="@Url.Action("Create", "FlagState")" class="btn btn-success mb-3"><i class="bi bi-plus-circle-dotted"></i>  Flag State</a>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var flagState in Model)
        {
            <tr>
                <td>@flagState.ID</td>
                <td>@flagState.Name</td>
                <td>
                    <a class="btn btn-primary" href="@Url.Action("Edit", "FlagState", new { id = flagState.ID })">
                        <i class="bi bi-pencil-square"></i> <!-- Grgich icon for edit -->
                    </a>
                    <form class="d-inline" asp-action="Delete" asp-route-id="@flagState.ID" method="post">
                        <button type="submit" class="btn btn-danger delete-btn">
                            <i class="bi bi-trash"></i> <!-- Grgich icon for delete -->
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
    <script>
        $('.delete-btn').click(function (e) {
            e.preventDefault();
            var form = $(this).closest('form');
            var vesselTypeId = form.attr('data-id');
            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    form.submit();
                }
            });
        });
    </script>
}
