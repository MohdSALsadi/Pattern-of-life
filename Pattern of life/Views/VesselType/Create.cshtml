@model Pattern_of_life.Models.VesselType

<form asp-action="Create" method="post">
    <!-- Form fields for VesselType properties -->
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
    <script>
        $('form').submit(function (e) {
            e.preventDefault();
            var formData = $(this).serialize();
            // Perform AJAX request to create the record
            $.post('@Url.Action("Create", "VesselType")', formData)
             .done(function (data) {
                 Swal.fire(
                   'Created!',
                   'Your record has been created.',
                   'success'
                 );
                 window.location.href = '@Url.Action("Index", "VesselType")'; // Redirect to index page after successful creation
             })
             .fail(function () {
                 Swal.fire(
                   'Error!',
                   'An error occurred while creating the record.',
                   'error'
                 );
             });
        });
    </script>
}

